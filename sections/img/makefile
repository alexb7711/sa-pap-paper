# MAKEFILE FOR UML

##===============================================================================
# Variables
SRC   := $(wildcard *.puml)
PNG   := $(patsubst %.puml, %.png, $(SRC))
UTXT  := $(patsubst %.puml, %.utxt, $(SRC))

##===============================================================================
# Recipes

##-------------------------------------------------------------------------------
#
all: png utxt

##-------------------------------------------------------------------------------
#
png: $(PNG)

##-------------------------------------------------------------------------------
#
utxt: $(UTXT)

##-------------------------------------------------------------------------------
#
clean:
	rm -f $(PNG) $(UTXT)

##===============================================================================
#

##-------------------------------------------------------------------------------
#
%.png: %.puml
	plantuml -tpng $<

##-------------------------------------------------------------------------------
#
%.utxt: %.puml
	plantuml -tutxt $<
