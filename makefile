# MAKEFILE FOR DOCS

##===============================================================================
# Variables
IMGDIR = ./img
SRC   := $(shell find . -type f -name "*.org")					# Source files
UML   := $(wildcard $(IMGDIR)/*.puml)
PNG   := $(patsubst %.puml, %.png, $(UML))

##===============================================================================
# Recipes

##-------------------------------------------------------------------------------
#
all: png

##-------------------------------------------------------------------------------
#
png: $(PNG)
	make -j4 -C $(IMGDIR) png

##-------------------------------------------------------------------------------
#
clean:
	rm -f $(PDF) $(PNG)

##===============================================================================
#

##-------------------------------------------------------------------------------
#
%.png: %.puml
	@
